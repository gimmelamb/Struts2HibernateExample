<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
  <constant name="struts.devMode" value="true" />
 
  <package name="default" namespace="/" extends="struts-default">

 
    <action name="addCustomer" 
	class="com.tut.customer.action.CustomerAction" method="addCustomer" >
       <result name="success">/customer.jsp</result>
       <result name="error">/error.jsp</result>
    </action>
 
    <action name="listCustomer" 
	class="com.tut.customer.action.CustomerAction" method="listCustomer" >
        <result name="success">/customer.jsp</result>
        <result name="error">/error.jsp</result>
    </action>
    <action name="deleteCustomer" 
	class="com.tut.customer.action.CustomerAction" method="deleteCustomer" >
        <result name="success">/customer.jsp</result>
        <result name="error">/error.jsp</result>
    </action>
    </package>
    
     
</struts>